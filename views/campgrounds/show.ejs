<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">

            <h1><%= campground.title  %></h1>
            <h1><%= campground.location %></h1>
            <img src="<%= campground.image %>" alt="">
            <p><%= campground.description %></p>
                <div class="card-body ">
                    <h3><a class="card-link btn btn-info" href="/campgrounds/<%= campground._id %>/edit"> Edit</a></h3>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method = "POST">
                        <button class=" btn btn-danger">Delete</button></form>
                        <a class="btn btn-link" href="/campgrounds"> All Campgrounds</a>
                </div>
            
        </div>
        
    
    </div>
    <div class="col-6">
        <div class="mt-4"><h3>Leave a Review</h3></div>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-rating" for="rating">Rating</label>
                <input class="form-range"type="range" min="1" max="5" name="review[rating]" id="rating" required>
            </div>
            <div class="mb-3">
                <label class="form-label"for="body">Review</label>
                <textarea class="form-control"name="review[body]" id="body" cols="30" row  s="3" required></textarea>
    
            </div>
            <button class=" btn btn-success">Submit</button>
        </form>
            <% for(let review of campground.reviews) {%>
            <div class="card">    
                <div class="card-body">
                    <h6 class="card-title">Rating: <%= review.rating %></h6>
                    <p class="card-text">Review: <%= review.body %></p>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
