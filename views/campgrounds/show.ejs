<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6 offset-3">

        <h1><%= campground.title  %></h1>
        <h1><%= campground.location %></h1>
        <img src="<%= campground.image %>" alt="">
        <p><%= campground.description %></p>
        <div class="row">
            <div class="col-md-6 ">
                <h3><a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit"> Edit</a></h3>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method = "POST">
                    <button class=" btn btn-danger">Delete</button></form>
            </div>
            <div class="row mt-4">
            <a class="btn" href="/campgrounds"> All Campgrounds</a>
            </div>
        </div>
    </div>
</div>
